<h1 class="text-center">Burger Time!</h1>


<div class="row">
	<div class="col-md-6 burger-box">
		{{#each burgers}}
			{{#unless this.devoured}}
				{{this.burger_name}}
				<form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
					<div class=form-group>
						<input type="hidden" name="devoured" value="true">
					</div>
					<div class="form-group">
						<button type="submit">DEVOUR!</button>
					</div>
				</form>
			{{/unless}}
		{{/each}}
	</div>
</div>
<div class="row text-center">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<form class="create-burger-form" action="/" method="POST">
			<textarea class="form-control" rows="3"></textarea>
		</form>
	</div>
</div>