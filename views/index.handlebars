<h1 class="text-center">Burger Time!</h1>


<div class="row">
	<div class="col-md-6" id="uneaten">
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li class="burger-box text-center">
						{{this.id}}
						{{this.burger_name}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden">
							<button class="btn-warning" type="submit">DEVOUR!</button>
						</form>
					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="col-md-6" id="eaten">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						{{this.id}}
						{{this.burger_name}}
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<div class="row">
	<h2 class="text-center">Add a burger!</h2>
	<form class="create-burger-form" action="/" method="POST">
		<div class="col-md-4"></div>
		<div class="form-group col-md-4">
			<textarea class="form-control" rows="3" name="name"></textarea>
		</div>
		<button class="btn-info" type="submit">Create A New One</button>
	</form>
</div>